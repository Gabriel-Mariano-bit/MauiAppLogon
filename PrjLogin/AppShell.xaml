<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PrjLogin.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PrjLogin"
    Title="PrjLogin"

    Shell.BackgroundColor="{AppThemeBinding Light=White,
                                            Dark=Black}"
    Shell.FlyoutBehavior="Disabled"
    Shell.ForegroundColor="{AppThemeBinding Light={StaticResource Tertiary},
                                            Dark=White}"
    Shell.NavBarHasShadow="True"
    Shell.TabBarBackgroundColor="{AppThemeBinding Light=#EEEEEE,
                                                  Dark=Black}"
    Shell.TabBarTitleColor="{AppThemeBinding Light=Black,
                                             Dark=White}"
    Shell.TabBarUnselectedColor="{AppThemeBinding Light=Black,
                                                  Dark=#CCC}"
    Shell.TitleColor="{AppThemeBinding Light={StaticResource Tertiary},
                                       Dark=White}">
    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="dotnet_bot.png"
            Route="MainPage" />
        <ShellContent
            Title="Profile"
            ContentTemplate="{DataTemplate local:LoginPage}"
            Icon="dotnet_bot.png"
            Route="ProfilePage" />
    </TabBar>

</Shell>    
